{
  "name": "@citizenteam/mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for deploying applications to Citizen platform. Enables Claude Desktop, Cursor, and VS Code to deploy apps with intelligent error handling and automatic fixes.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "citizen-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "instructions.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch run src/index.ts",
    "start": "bun run src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "archiver": "^7.0.1",
    "form-data": "^4.0.1"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "citizen",
    "deployment",
    "paas",
    "claude",
    "claude-desktop",
    "cursor",
    "vscode",
    "ai-deployment",
    "nixpacks",
    "docker"
  ],
  "author": "Citizen Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/citizenteam/deployment-mcp.git"
  },
  "homepage": "https://citizen.ustun.tech",
  "bugs": {
    "url": "https://github.com/citizenteam/deployment-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
